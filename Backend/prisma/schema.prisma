// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  isVerified Boolean @default(false)
  verificationCode String?
  verificationExpiry DateTime?
  resetCode String?
  resetExpiry DateTime?
  createdAt DateTime @default(now())
  
  // Relations
  projects  Project[]
  
  @@map("users")
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  ownerId     Int
  createdAt   DateTime @default(now())
  
  // Relations
  owner   User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  inputs  Input[]
  artifacts Artifact[]
  
  @@map("projects")
}

model Input {
  id        Int      @id @default(autoincrement())
  projectId Int
  type      InputType
  content   String?  // For text or processed text
  filePath  String?  // For uploaded files
  createdAt DateTime @default(now())
  
  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@map("inputs")
}

model Artifact {
  id        Int         @id @default(autoincrement())
  projectId Int
  type      ArtifactType
  content   Json        // For flow JSON or story string
  createdAt DateTime    @default(now())
  
  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@map("artifacts")
}

enum InputType {
  text
  voice
  document
}

enum ArtifactType {
  story
  flow
}
