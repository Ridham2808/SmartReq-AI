generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int       @id @default(autoincrement())
  name               String
  email              String    @unique
  password           String
  createdAt          DateTime  @default(now())
  isVerified         Boolean   @default(false)
  verificationCode   String?
  verificationExpiry DateTime?
  resetCode          String?
  resetExpiry        DateTime?
  // Profile fields (optional)
  avatarUrl          String?
  phone              String?
  role               String?
  company            String?
  location           String?
  website            String?
  bio                String?
  twitter            String?
  linkedin           String?
  github             String?
  lastLoginAt        DateTime?
  projects           Project[]

  @@map("users")
}

model Project {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  ownerId     Int
  createdAt   DateTime   @default(now())
  artifacts   Artifact[]
  inputs      Input[]
  owner       User       @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@map("projects")
}

model DemoRequest {
  id          Int      @id @default(autoincrement())
  email       String
  company     String
  name        String?
  requirements String?
  status      String   @default("pending")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime @updatedAt

  @@map("demo_requests")
}

model TrialRequest {
  id        Int      @id @default(autoincrement())
  email     String
  company   String
  teamSize  String?
  useCase   String?
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("trial_requests")
}

model EmailCapture {
  id        Int      @id @default(autoincrement())
  email     String
  source    String   @default("impact_page")
  createdAt DateTime @default(now())

  @@map("email_captures")
}

model Input {
  id        Int       @id @default(autoincrement())
  projectId Int
  type      InputType
  content   String?
  filePath  String?
  createdAt DateTime  @default(now())
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("inputs")
}

model Artifact {
  id        Int          @id @default(autoincrement())
  projectId Int
  type      ArtifactType
  content   Json
  createdAt DateTime     @default(now())
  project   Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("artifacts")
}

enum InputType {
  text
  voice
  document
}

enum ArtifactType {
  story
  flow
}
